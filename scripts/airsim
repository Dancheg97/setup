sudo pacman -S --needed git base-devel
git clone https://aur.archlinux.org/yay.git
cd yay
makepkg -si
cd ..
sudo rm -r yay

yay -Sy unreal-engine


cd ~
wget https://github.com/microsoft/AirSim/releases/download/v1.8.1/Blocks.zip
unzip Blocks.zip
rm Blocks.zip
cd Blocks
sudo chown -R dancheg97:dancheg97 LinuxBlocks1.8.1
mv LinuxBlocks1.8.1/LinuxNoEditor airsim
echo 'alias airsim="sh ~/airsim/Blocks.sh"' >> ~/.zshrc
source ~/.zshrc


